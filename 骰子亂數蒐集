<?php
$point1 = 0;
$point2 = 0;
$point3 = 0;
$point4 = 0;
$point5 = 0;
$point6 = 0;
for ($i=1; $i <= 10000 ; $i++) { 
    $dice = rand(1, 6);
    if ($dice == 1) {
        $point1 = $point1 + 1;
    }
    if ($dice == 2) {
        $point2 = $point2 + 1;
    }
    if ($dice == 3) {
        $point3 = $point3 + 1;
    }
    if ($dice == 4) {
        $point4 = $point4 + 1;
    }
    if ($dice == 5) {
        $point5 = $point5 + 1;
    }
    if ($dice == 6) {
        $point6 = $point6 + 1;
    }
}
?>
<!DOCTYPE html>
<html>
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <meta http-equiv="X-UA-Compatible" content="ie=edge">
    <title>Document</title>
</head>
<body>
    <p>
        點數1擲到 <?= $point1?> 次
    </p>
    <p>
        點數2擲到 <?= $point2?> 次
    </p>
    <p>
        點數3擲到 <?= $point3?> 次
    </p>
    <p>
        點數4擲到 <?= $point4?> 次
    </p>
    <p>
        點數5擲到 <?= $point5?> 次
    </p>
    <p>
        點數6擲到 <?= $point6?> 次
    </p>
</body>
</html>
